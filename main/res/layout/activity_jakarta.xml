<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jakarta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:background="#2071c4"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_width="match_parent"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_jakarta"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:onClick="btnNextJakarta"
                android:id="@+id/btn_next_jakarta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="250dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_next_akor"/>
            <Button
                android:visibility="gone"
                android:onClick="btnBackPreviousJakarta"
                android:id="@+id/btn_previous_jakarta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="250dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_back_akor" />

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/balik_jakarta"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_back" />

</RelativeLayout>