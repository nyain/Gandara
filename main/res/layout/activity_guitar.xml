<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Guitar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/main_drawer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/kintil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
            <HorizontalScrollView
                android:background="#ffffff"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    >

                    <ImageView
                        android:src="@drawable/ic_akor_up"
                        android:onClick="Hilih"
                        android:id="@+id/button"
                        android:layout_width="90dp"
                        android:layout_height="80dp"/>
                    <ImageView
                        android:layout_marginStart="15dp"
                        android:onClick="Kintil"
                        android:id="@+id/button1"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_up_skala"/>
                    <ImageView
                        android:layout_marginStart="15dp"
                        android:onClick="Hilih1"
                        android:id="@+id/button2"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_up_tempo"/>
                    <ImageView
                        android:layout_marginStart="15dp"
                        android:onClick="Kintil1"
                        android:id="@+id/button3"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_progresi_up"/>

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>