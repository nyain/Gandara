<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChordDaerah">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#009688"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_aceh"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_aceh"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_bali"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_bali" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_banten"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_banten" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_bengkulu"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_bengkulu" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_gorontalo"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_prov_gorontalo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_irian"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_papua" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_irian_barat"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_papuabar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_jakarta"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_jkt" />
                    </LinearLayout>

                    <LinearLayout
