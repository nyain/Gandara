                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_jawa_barat"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_jabar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_jawa_tengah"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_jateng" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_jawa_timur"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_jatim" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
