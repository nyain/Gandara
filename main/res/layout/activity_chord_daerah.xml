                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_maluku_utara"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_maluut" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_nusa_tenggara_barat"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_ntb" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_nusa_tenggara_timur"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_ntt" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_riau"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_prov_riau" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_sulawesi_barat"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_sulabar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_sulawesi_selatan"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_sulasel" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_sulawesi_tengah"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_sulateng" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_sulawesi_tenggara"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_sulatenggara" />
                    </LinearLayout>

                    <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_sulawesi_utara"
                            android:layout_width="97dp"
