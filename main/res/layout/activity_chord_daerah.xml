                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_kalimantan_tengah"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_kalteng" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_kalimantan_timur"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_kaltim" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_kalimantan_utara"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_kalut" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_kepulauan_bangka_belitung"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_bangka_belitung" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_kepulauan_riau"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_kep_riau" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/daerah_lampung"
                            android:layout_width="97dp"
                            android:layout_height="115dp"
                            android:background="@drawable/ic_lampung" />
                    </LinearLayout>

                    <LinearLayout
